.card
  .card-header
    .fa.fa-user
    = user.email
  .card-footer
    Signed up
    - time_ago_in_words(user.created_at)
    ago
  .card-footer
    = user.sign_in_count
    = user.current_sign_in_at
    = user.last_sign_in_at
    = user.current_sign_in_ip
    = user.last_sign_in_ip
  .card-footer
    Confirmed email?
    - if user.confirmed_at.present?
      .badge.bg-success Yes
    - else
      .badge.bg-danger No
